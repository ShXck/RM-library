#include "NetworkHandler.h"

Network_Handler::Network_Handler() {
}

void Network_Handler::make_connection() {
	sf::IpAddress _address = sf::IpAddress::getLocalAddress();
	_socket.setBlocking( false );
	_socket.connect( _address, PORT );

	std::thread t( run );
}

void Network_Handler::run() {

	std::cout << "running..." << std::endl;

	std::runtime_error not_received( "The message was not received successfully" );

	sf::Packet _packet;
	std::string _message;

	while( true ) {
		if ( _socket.receive( _packet ) == sf::Socket::Done ) {
			if( _packet >> _message ) {

				std::cout << _message << std::endl;

				const char* _data = _message.c_str();
				const char* data_key = JSON_Handler::get_value( _data, "key" ).GetString();
				std::size_t data_size = JSON_Handler::get_value( _data, "size" ).GetInt();
				std::string data_value = JSON_Handler::get_value( _data, "value" ).GetString();

				void* value_ptr = &data_value;

				rm::rmRef_h new_ref( data_key , value_ptr, data_size );

				recent_requests.add( new_ref );

			} else {
				throw not_received;
			}
		} else {
			throw not_received;
		}
	}
}

void Network_Handler::send( std::string message ) {
	sf::Packet _packet;
	_packet << message;
	_socket.send( _packet );
}

void Network_Handler::check_server_status() {

}

rm::rmRef_h* Network_Handler::recent() {
	return recent_requests.last();
}

Network_Handler::~Network_Handler() {
	// TODO Auto-generated destructor stub
}

